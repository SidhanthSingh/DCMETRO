<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dcmetro.ss.com.dcmetro">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Near" />
        <activity android:name=".MetroBus" />
        <activity android:name=".Favorites" />
        <activity android:name=".MetroRail" />
        <activity android:name=".MetroMap" />
        <activity android:name=".RouteStations" />
        <activity android:name=".RouteSchedule" />
        <activity android:name=".BusStopSchedule" />
        <activity android:name=".RealTimeSchedule"></activity>
    </application>

</manifest>